@{
  Layout = "_Layout";
}
<h1>To Do List</h1>
<hr />
<h2>Categories:</h2>
@if (Model.Count != 0)
{
  <table class="table table-striped">
      <thead>
          <tr>
              <th><h2>name</h2></th>

          </tr>
      </thead>
      <tbody>
    @foreach (var category in Model)
    {
      <tr>
           <td><a href="/categories/@category.GetId()">@category.GetName()</a>
             <a href="/categories/@category.GetId()/delete" class="btn btn-danger">x</a></td>
           </tr>
    }
  </tbody>
  </table>
}
<h4><a href="/categories/new" class="btn btn-primary btn-lg btn-warning">Add a new category</a></h4>
<h4><a href="/" class="btn btn-primary btn-lg btn-info">Return home</a></h4>
